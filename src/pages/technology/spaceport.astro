---
import Layout from "@/layouts/Layout.astro"
import SectionHeading from "@/components/SectionHeading.astro"
import Technology from "@/sections/Technology.astro"
import Selector from "@/components/Selector.astro"
import { technology } from "@data"
import spaceport from "@/assets/technology/image-spaceport-landscape.jpg"
import { Image } from "astro:assets"

const { name, description } = technology[1]
---

<Layout 
  pageTitle="Launch Vehicle | Technology"
  className=`
    bg-technology-mobile md:bg-technology-tablet
    bg-cover bg-no-repeat
    xl:bg-technology-desktop w-screen min-h-screen
  `
>
  <SectionHeading
    sectionNumber="03"
    sectionTitle="SPACE LAUNCH 101"
  />

  <Image
    src={spaceport}
    alt={name}
    class={"image"}
  />

  <Selector />

  <Technology
    title={name}
    description={description} 
  />
</Layout>

<style>
  .image {
    aspect-ratio: 350 / 141;
    object-fit: cover;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }
</style>